<h2>All users</h2>
<ul>
  <% @users.each do |user| %>
    <% next if user == current_user %>
    <% if policy(Friendship.new(user: current_user, friend: user)).create? %>
      <li>
        <%= user.email %> - <%= link_to 'Add Friend', create_friendship_path(user.id), method: 'POST' %>
      </li>
    <% else %>
            <li>
        <%= user.email %> - <%= link_to 'Remove Friend', create_friendship_path(user.id), method: 'DELETE' %>
      </li>
    <% end %>
  <% end %>
</ul>
<%= link_to 'Check your friends', friendships_path %>
<%= link_to  "Home", root_path %>